<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        li {
            list-style-type: none;
        }
    </style>
</head>

<body>

    <div class="pt-lg-5"></div>
    <div class="pt-lg-5"></div>
    <main class="main">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2 mt-5">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/store">Store</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Grid 3 Columns</li>
                </ol>
            </div>
        </nav>

        <div class="page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="toolbox">
                            <div class="toolbox-left">
                                <div class="toolbox-info">

                                </div>
                            </div>

                            <div class="toolbox-right">
                                <div class="toolbox-sort">
                                    <label for="sortby">Sort by:</label>
                                    <div class="select-custom">
                                        <select name="sortby" id="sortby" class="form-control">
                                            <option value="popularity" selected="selected">Most Popular</option>
                                            <option value="rating">Most Rated</option>
                                            <option value="date">Date</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="toolbox-layout">
                                    <!-- Layout buttons -->
                                </div>
                            </div>
                        </div>

                        <!-- Product Grid -->
                        <div class="products mb-3">
                            <div class="row justify-content-center" id="products-section">
                                {{#if products }}
                                {{#each products}}
                                <div class="col-6 col-md-4 col-lg-4">
                                    <div class="product product-7 text-center">
                                        <figure class="product-media">
                                            <span class="product-label label-new">New</span>
                                            <a href="/product/{{this._id}}">
                                                <img src="/images/{{this.mainImage}}" alt="Product image"
                                                    class="product-image">
                                            </a>
                                        </figure>
                                        <div class="product-body">
                                            <div class="product-cat">
                                                <a href="#">Women</a>
                                            </div>
                                            <h3 class="product-title"><a href="/product/{{this._id}}">{{this.name}}</a>
                                            </h3>
                                            <div class="product-price">{{this.price}}</div>
                                            <div class="product-nav product-nav-thumbs">
                                                <a href="#" class="active">
                                                    <img src="/images/{{this.images.[0]}}" alt="Product image">
                                                </a>
                                                <a href="#">
                                                    <img src="/images/{{this.images.[1]}}" alt="Product image">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                                {{/if}}
                            </div>
                        </div>

                        <!-- Pagination Controls -->
                        <div class="container">
                            <div class="row">
                                <div class="col-2">
                                    <div aria-label="Page navigation">
                                        <div class="pagination" id="pagination">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>



                    <!-- Sidebar with Categories -->
                    <aside class="col-lg-3 order-lg-first col-first">
                        <div class="sidebar sidebar-shop">
                            <div class="widget widget-clean">
                                <label>Filters:</label>
                                <a href="/store/" class="">Clean All</a>
                            </div>

                            <div class="widget widget-collapsible">
                                <h3 class="widget-title">
                                    <a data-toggle="collapse" href="#widget-1" role="button" aria-expanded="true"
                                        aria-controls="widget-1">
                                        Category
                                    </a>
                                </h3>
                                <div class="collapse show" id="widget-1">
                                    <div class="widget-body">
                                        {{#each categories }}
                                        <div class="filter-items filter-items-count">
                                            <div class="filter-item">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input"
                                                        id="cat-{{@index}}">
                                                    <label class="custom-control-label"
                                                        for="cat-{{@index}}">{{this}}</label>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </main>

    <script>
        $(document).ready(function () {
            // Handle category filtering and pagination
            const fetchProducts = (selectedCategories, page = 1) => {
                $.ajax({
                    url: '/products/category', // Route to handle category and pagination filter
                    method: 'GET',
                    data: {
                        categories: selectedCategories,
                        page: page // Send the current page for pagination
                    },
                    success: function (response) {
                        // Clear existing products
                        $('#products-section').empty();

                        // Render new products
                        response.products.forEach(product => {
                            $('#products-section').append(`
                            <div class="col-6 col-md-4 col-lg-4">
                                <div class="product product-7 text-center">
                                    <figure class="product-media">
                                        <a href="/product/${product._id}">
                                            <img src="/images/${product.mainImage}" alt="Product image" class="product-image">
                                        </a>
                                    </figure>
                                    <div class="product-body">
                                        <div class="product-cat">
                                            <a href="#">${product.category}</a>
                                        </div>
                                        <h3 class="product-title"><a href="/product/{{this._id}}">${product.name}</a></h3>
                                        <div class="product-price">${product.price}</div>
                                    </div>
                                </div>
                            </div>
                        `);
                        });

                        // Update the URL with the selected categories and page number
                        const newUrl = `/store?categories=${encodeURIComponent(selectedCategories.join(','))}&page=${page}`;
                        history.pushState(null, '', newUrl);

                        // Update the pagination control only if there are multiple pages
                        if (response.totalPages > 1) {
                            renderPagination(response.totalPages, page);
                        } else {
                            $('#pagination').empty(); // Hide pagination if there's only 1 page
                        }
                    },
                    error: function (err) {
                        console.error('Error fetching products:', err);
                    }
                });
            };

            // Dynamically generate pagination controls
            const renderPagination = (totalPages, currentPage) => {
                $('#pagination').empty();

                // Previous button
                if (currentPage > 1) {
                    $('#pagination').append(`
                    <li class="page-item">
                        <a class="page-link prev" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                `);
                }

                // Page numbers
                for (let i = 1; i <= totalPages; i++) {
                    $('#pagination').append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="#">${i}</a>
                    </li>
                `);
                }

                // Next button
                if (currentPage < totalPages) {
                    $('#pagination').append(`
                    <li class="page-item">
                        <a class="page-link next" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                `);
                }

                // Handle click event for pagination links
                $('.page-link').on('click', function (e) {
                    e.preventDefault();
                    const selectedPage = $(this).hasClass('prev')
                        ? currentPage - 1
                        : $(this).hasClass('next')
                            ? currentPage + 1
                            : parseInt($(this).text());

                    const selectedCategories = $('.custom-control-input:checked').map(function () {
                        return $(this).next('label').text();
                    }).get();

                    fetchProducts(selectedCategories, selectedPage);
                });
            };

            // Initial load
            fetchProducts([], 1); // Load first page with no filters

            // When any checkbox changes its state
            $('.custom-control-input').on('change', function () {
                const selectedCategories = $('.custom-control-input:checked').map(function () {
                    return $(this).next('label').text();
                }).get();
                fetchProducts(selectedCategories, 1); // Reset to first page when categories change
            });
        });
    </script>

    {{!-- categories count --}}

    <script>
        $(document).ready(function () {
            const fetchCategoryCounts = () => {
                $.ajax({
                    url: '/categories/count', // Adjust route if needed
                    method: 'GET',
                    success: function (response) {
                        const categoryCounts = response.categoryCounts;
                        // Loop through categories and update the count next to each label
                        categoryCounts.forEach(category => {
                            // Assuming your category checkboxes are named "cat-{category}"
                            $(`#cat-${category.category}`).append(` (${category.count})`);
                        });
                    },
                    error: function (err) {
                        console.error('Error fetching category counts:', err);
                    }
                });
            };

            // Fetch category counts on page load
            fetchCategoryCounts();
        });

    </script>


</body>

</html>