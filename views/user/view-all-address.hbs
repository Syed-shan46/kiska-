<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View address</title>
</head>
<style>
    .card {
        border-radius: 10px
    }

    .form-check-input {
        margin-top: .7rem !important;
    }
</style>

<body>
    <div class="mt-5 pt-5"></div>
    <div class="mt-lg-5 pt-lg-5"></div>
    <div class="row justify-content-center p-2">
        <div class="col-lg-5 col-12">
            <div class="address-selection">
                {{#if (eq userAddress.addresses.length 0)}}
                <h3 class="card-title">No address added..!</h3>
                <a href="/profile/address" class="btn btn-outline-dark-2 mt-2">
                    <span>Add Address</span><i class="icon-long-arrow-right"></i>
                </a>
                {{else}}


                <!-- Iterate over each address and display it with a radio button -->
                <form action="/cart/checkout" method="POST">
                    {{#if (eq userAddress.addresses.length 0)}}
                    <h3 class="card-title">No address added..!</h3>
                    <a href="/profile/address" class="btn btn-outline-dark-2 mt-2">
                        <span>Add Address</span><i class="icon-long-arrow-right"></i>
                    </a>
                    {{else}}
                    <h3 class="card-title"> All address</h3>
                    {{#each userAddress.addresses }}
                    <div class="card card-dashboard mt-2">
                        <div class="card p-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="addressId" id="address-{{_id}}"
                                    value="{{_id}}" {{#if @first}}checked{{/if}}>
                                <!-- Use 'checked' if it's the first item -->
                                <!-- Use address _id here -->
                                <label class="form-check-label ml-4" for="address-{{_id}}">
                                    {{house}}<br>
                                    {{street}}, {{city}}, {{state}}, {{zipCode}}<br>
                                    {{phone}}
                                </label>
                            </div>
                        </div>
                    </div>

                    {{/each}}
                    
                    {{/if}}
                </form>

                {{/if}}
            </div>
        </div>
    </div>
</body>

</html>